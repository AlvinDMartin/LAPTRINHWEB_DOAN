@model IEnumerable<WebBanHangMyPham.Models.NhaSanXuat>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Danh sách Nhà sản xuất </h2>
    </div>
    <div class="col-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>
</div>

<br />
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.TenNhaSX)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.QuocGia)
                </th>
            </tr>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.TenNhaSX)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.QuocGia)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.Id" />
                    </td>
                </tr>

            }

        </table>
    }
    else
    {
        <p>Không có nhà sản xuất...</p>
    }
</div>

